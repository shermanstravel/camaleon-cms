<% (folders rescue folder).each do |folder| %>
    <div class="media_item folder_item" data-key="<%= folder.name %>">
        <div class="thumb">
            <i class="fa fa-folder"></i>
        </div>
        <div class="label_thumb">
            <%= folder.name %>
        </div>
        <% if @show_file_actions %>
            <div class="actions">
                <a href="#" class="del_folder"><i class="fa fa-trash"></i></a>
            </div>
        <% end %>
    </div>
<% end %>